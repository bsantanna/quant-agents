root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py}]
indent_size = 4
max_line_length = 120

[*.{js,yml,yaml,ts}]
indent_size = 2

[*.md]
max_line_length = 80

[Makefile]
indent_style = tab

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false